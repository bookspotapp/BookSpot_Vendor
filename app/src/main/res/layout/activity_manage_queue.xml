<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageQueue">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/leftarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Manage Queue"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_arrow" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/cardView1"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-125dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <Spinner
                android:id="@+id/optional_offs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Optional Offs :"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/firm_timings"
                app:layout_constraintTop_toBottomOf="@+id/feve" />

            <TextView
                android:id="@+id/timings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Morning "
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/firm_timings"
                app:layout_constraintTop_toBottomOf="@+id/firm_timings" />

            <EditText
                android:id="@+id/fmor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:textSize="15sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/timings"
                app:layout_constraintTop_toBottomOf="@id/timings" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_fmor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:elevation="5dp"
                android:text="From"
                android:textColor="#ffffff"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/fmor"
                app:layout_constraintEnd_toEndOf="@+id/fmor"
                app:layout_constraintStart_toStartOf="@+id/fmor"
                app:layout_constraintTop_toTopOf="@+id/fmor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/lmor"
                app:layout_constraintEnd_toStartOf="@+id/lmor"
                app:layout_constraintStart_toEndOf="@+id/fmor"
                app:layout_constraintTop_toTopOf="@+id/lmor" />

            <EditText
                android:id="@+id/lmor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:ems="5"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timings" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_lmor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:elevation="5dp"
                android:text="TO"
                android:textColor="#ffffff"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/lmor"
                app:layout_constraintEnd_toEndOf="@+id/lmor"
                app:layout_constraintStart_toStartOf="@+id/lmor"
                app:layout_constraintTop_toTopOf="@+id/lmor" />

            <TextView
                android:id="@+id/timings1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/firm_timings"
                app:layout_constraintTop_toBottomOf="@+id/fmor" />

            <EditText
                android:id="@+id/feve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:ems="5"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/timings1"
                app:layout_constraintTop_toBottomOf="@id/timings1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_feve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:elevation="5dp"
                android:text="From"
                android:textColor="#ffffff"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/feve"
                app:layout_constraintEnd_toEndOf="@+id/feve"
                app:layout_constraintStart_toStartOf="@+id/feve"
                app:layout_constraintTop_toTopOf="@+id/feve" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/leve"
                app:layout_constraintEnd_toStartOf="@+id/leve"
                app:layout_constraintStart_toEndOf="@+id/feve"
                app:layout_constraintTop_toTopOf="@+id/feve" />

            <EditText
                android:id="@+id/leve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:ems="5"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/feve"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/feve" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_leve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange"
                android:elevation="5dp"
                android:text="TO"
                android:textColor="#ffffff"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/leve"
                app:layout_constraintEnd_toEndOf="@+id/leve"
                app:layout_constraintStart_toStartOf="@+id/leve"
                app:layout_constraintTop_toTopOf="@+id/leve" />



            <TextView
                android:id="@+id/firm_timings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Firm Timings"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tkcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Daily Token Limit :"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/firm_timings"
                app:layout_constraintTop_toBottomOf="@+id/optional_offs" />

            <EditText
                android:id="@+id/tkn_lmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/tkcc"
                app:layout_constraintEnd_toEndOf="@+id/optional_offs"
                app:layout_constraintTop_toTopOf="@+id/tkcc" />

            <TextView
                android:id="@+id/opening_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Token To be Booked\n before firm opens :"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/tkcc"
                app:layout_constraintTop_toBottomOf="@+id/tkcc" />


            <EditText
                android:id="@+id/bkd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="4"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/opening_limit"
                app:layout_constraintEnd_toEndOf="@+id/tkn_lmt"
                app:layout_constraintTop_toTopOf="@+id/opening_limit"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:elevation="5dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:paddingHorizontal="50dp"
                android:paddingVertical="15dp"
                android:text="Save"
                android:textColor="#ffffff"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>